<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:screenOrientation="portrait"
        android:orientation="horizontal"
        tools:context=".UnoActivity">

    <LinearLayout
            android:id="@+id/linearLayoutKotel1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:background="@color/colorPrimary">

        <TextView
                android:id="@+id/textView1Kotel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/_1"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" android:paddingLeft="8dp"/>

        <TextView
                android:id="@+id/textView1kotelDo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAllCaps="true"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="24sp" android:layout_marginLeft="10dp" android:layout_marginStart="10dp"/>

        <TextView
                android:id="@+id/textView1kotelPosle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAllCaps="true"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="24sp" android:layout_marginLeft="30dp" android:layout_marginStart="30dp"/>

        <Switch
                android:id="@+id/switch1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:button="@android:color/holo_red_dark"
                android:textColor="@android:color/holo_red_dark"
                android:textColorHighlight="@android:color/holo_red_dark"
                android:textColorHint="@android:color/holo_red_dark"
                android:textColorLink="@android:color/holo_red_dark" android:paddingRight="4dp"/>
    </LinearLayout>

    //*******************котел 2


    <LinearLayout
            android:id="@+id/linearLayoutNameKotel2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:weightSum="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layot1Kotel" android:background="@color/colorPrimary">

        <TextView
                android:id="@+id/textView1Kotel2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/_2"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" android:paddingLeft="8dp"/>

        <TextView
                android:id="@+id/textView2kotelDo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="24sp" android:layout_marginLeft="10dp" android:layout_marginStart="10dp"/>

        <TextView
                android:id="@+id/textView2kotelPosle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="24sp" android:layout_marginLeft="30dp" android:layout_marginStart="30dp"/>

        <Switch
                android:id="@+id/switch2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHighlight="@android:color/holo_red_dark"
                android:textColorHint="@android:color/holo_red_dark"
                android:textColorLink="@android:color/holo_red_dark" android:paddingRight="4dp"/>
    </LinearLayout>

    //**********************
    //*******************котел3


    <LinearLayout
            android:id="@+id/linearLayoutNameKotel3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layot2Kotel" app:layout_constraintHorizontal_bias="1.0"
            android:background="@color/colorPrimary">

        <TextView
                android:id="@+id/textView1Kotel3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/_3"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" android:paddingLeft="8dp"/>

        <TextView
                android:id="@+id/textView3kotelPosle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="24sp" android:layout_marginLeft="10dp" android:layout_marginStart="10dp"/>

        <TextView
                android:id="@+id/textView3kotelDo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="24sp" android:layout_marginLeft="30dp" android:layout_marginStart="30dp"/>
        <Switch
                android:id="@+id/switch3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHighlight="@android:color/holo_red_dark"
                android:textColorHint="@android:color/holo_red_dark"
                android:textColorLink="@android:color/holo_red_dark" android:paddingRight="4dp"/>

    </LinearLayout>

    //**********************
    //*******************котоел 4


    <LinearLayout
            android:id="@+id/linearLayoutNameKotel4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layot3Kotel" android:background="@color/colorPrimary">

        <TextView
                android:id="@+id/textView1Kotel4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/_4"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" android:paddingLeft="8dp"/>

        <TextView
                android:id="@+id/textView4kotelPosle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="24sp" android:layout_marginLeft="10dp" android:layout_marginStart="10dp"/>

        <TextView
                android:id="@+id/textView4kotelDo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="24sp" android:layout_marginLeft="30dp" android:layout_marginStart="30dp"/>
        <Switch
                android:id="@+id/switch4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHighlight="@android:color/holo_red_dark"
                android:textColorHint="@android:color/holo_red_dark"
                android:textColorLink="@android:color/holo_red_dark" android:paddingRight="4dp"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/layot4Kotel"
            android:layout_width="0dp"
            android:layout_height="73dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutNameKotel4" android:baselineAligned="false"
            android:gravity="center">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" android:gravity="center">

            <local.home.unokochegarv2.CustomNumberPicker
                    android:id="@+id/numberPicker24kotel"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:animateLayoutChanges="true"
                    android:scaleX="4"
                    android:scaleY="4.2"
                    android:solidColor="?android:attr/colorBackgroundCacheHint"
                    app:layout_constraintLeft_toRightOf="@+id/textView3kotelDo"
                    app:layout_constraintTop_toBottomOf="@+id/textView1Kotel"
                    android:gravity="fill_vertical|center"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" android:gravity="center" android:layout_marginTop="-2dp"
        >

            <local.home.unokochegarv2.CustomNumberPicker
                    android:id="@+id/numberPicker4kotel"


                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:animateLayoutChanges="true"
                    android:scaleX="4"
                    android:scaleY="4.2"
                    android:solidColor="?android:attr/colorBackgroundCacheHint"
                    app:layout_constraintTop_toBottomOf="@+id/textView1Kotel"
                    android:gravity="fill_vertical|center"
            />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/layot1Kotel"
            android:layout_width="0dp"
            android:layout_height="73dp"
            android:orientation="horizontal"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutKotel1" android:baselineAligned="false"
            android:gravity="center">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            <local.home.unokochegarv2.CustomNumberPicker
                    android:id="@+id/numberPicker"


                    android:layout_width="match_parent"
                    android:layout_weight="1"

                    android:animateLayoutChanges="true"
                    android:measureWithLargestChild="true"
                    android:nestedScrollingEnabled="false"
                    android:scaleX="4"
                    android:scaleY="4.2"
                    android:solidColor="?android:attr/colorBackgroundCacheHint"
                    app:layout_constraintTop_toBottomOf="@+id/textView1Kotel" tools:targetApi="lollipop"
                    android:layout_height="match_parent" android:gravity="fill_vertical|center"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

            <local.home.unokochegarv2.CustomNumberPicker
                    android:id="@+id/numberPicker2"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:animateLayoutChanges="true"
                    android:scaleX="4"
                    android:scaleY="4.2"
                    android:solidColor="?android:attr/colorBackgroundCacheHint"
                    app:layout_constraintLeft_toRightOf="@+id/textView1Kotel3"
                    app:layout_constraintTop_toBottomOf="@+id/textView1Kotel"
                    android:gravity="fill_vertical|center"
            />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/layot3Kotel"
            android:layout_width="0dp"
            android:layout_height="73dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutNameKotel3" android:baselineAligned="false"
            android:gravity="center">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            <local.home.unokochegarv2.CustomNumberPicker
                    android:id="@+id/numberPicker23kotel"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:animateLayoutChanges="true"
                    android:scaleX="4"
                    android:scaleY="4.2"
                    android:solidColor="?android:attr/colorBackgroundCacheHint"
                    app:layout_constraintLeft_toRightOf="@+id/textView1Kotel3"
                    app:layout_constraintTop_toBottomOf="@+id/textView1Kotel"
                    android:gravity="fill_vertical|center"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            <local.home.unokochegarv2.CustomNumberPicker
                    android:id="@+id/numberPicker33kotel"


                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:animateLayoutChanges="true"
                    android:scaleX="4"
                    android:scaleY="4.2"
                    android:solidColor="?android:attr/colorBackgroundCacheHint"
                    app:layout_constraintTop_toBottomOf="@+id/textView1Kotel"
                    android:gravity="fill_vertical|center"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/layot2Kotel"
            android:layout_width="0dp"
            android:layout_height="73dp"
            android:orientation="horizontal"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutNameKotel2" android:baselineAligned="false"
            android:gravity="center">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            <local.home.unokochegarv2.CustomNumberPicker
                    android:id="@+id/numberPicker2kotel"


                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:animateLayoutChanges="true"
                    android:scaleX="4"
                    android:scaleY="4.2"
                    android:solidColor="?android:attr/colorBackgroundCacheHint"
                    app:layout_constraintTop_toBottomOf="@+id/textView1Kotel"
                    android:gravity="fill_vertical|center"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            <local.home.unokochegarv2.CustomNumberPicker
                    android:id="@+id/numberPicker22kotel"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:animateLayoutChanges="true"
                    android:scaleX="4"
                    android:scaleY="4.2"
                    android:solidColor="?android:attr/colorBackgroundCacheHint"
                    app:layout_constraintLeft_toRightOf="@+id/textView1Kotel3"
                    app:layout_constraintTop_toBottomOf="@+id/textView1Kotel"
                    android:gravity="fill_vertical|center"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
            android:id="@+id/dataTimeLastBase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/dataTextInfo"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp" android:layout_marginRight="12dp"
            app:layout_constraintBottom_toTopOf="@+id/button2" android:layout_marginBottom="8dp"/>

    <TextView
            android:id="@+id/remarkDataTimeLastBase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/remarkText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button"/>

    <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/saveDataToDB"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
            android:id="@+id/button2"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:text="@string/getDataFromDB"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    //**********************

</android.support.constraint.ConstraintLayout>